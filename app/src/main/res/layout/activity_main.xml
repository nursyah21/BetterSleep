<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fitsSystemWindows="true"
    tools:context=".activity.MainActivity">

    <!-- better sleep -->
    <TextView
        android:id="@+id/bettersleep_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:text="bettersleep"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <!-- run clock -->
    <TextView
        android:id="@+id/current_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true"
        android:text="0:0"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_below="@id/bettersleep_textview"
        tools:ignore="HardcodedText" />

    <!-- set alarm -->

    <ImageView
        android:translationY="-30dp"
        android:id="@+id/astronout"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/astronoutsleep"
        tools:ignore="ContentDescription" />

    <Button
        android:layout_marginTop="-20dp"
        android:id="@+id/alarm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button2"
        android:drawableLeft="@drawable/ic_alarm"
        android:layout_below="@id/astronout"
        android:text="0:0"
        android:textSize="14sp"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry" />

    <include layout="@layout/navbar" />


</RelativeLayout>