<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_sleep"
    android:padding="20dp"
    tools:context=".activity.AlarmActivity">


    <!-- bettersleep textview -->
    <TextView
        android:id="@+id/bettersleep_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="bettersleep"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginTop="25dp"
        tools:ignore="HardcodedText" />

    <!-- pick time -->
    <TimePicker
        android:id="@+id/timepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:background="@color/color1_transparent"
        android:layout_below="@id/bettersleep_textview"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="40dp"
        android:paddingVertical="10dp"/>

    <!-- sleep -->
    <Button
        android:id="@+id/sleep_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color1_transparent"
        android:layout_below="@id/timepicker"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="sleep"
        tools:ignore="ButtonStyle,HardcodedText,RtlHardcoded" />



</RelativeLayout>